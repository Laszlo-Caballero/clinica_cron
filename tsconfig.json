{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "declaration": false,
    "verbatimModuleSyntax": false
  }
}
